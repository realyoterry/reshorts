{
    "manifest_version": 3,
    "name": "ReShorts",
    "version": "1.0.0",
    "description": "A version of Return YouTube Dislikes, that supports YouTube shorts.",
    "host_permissions": [
        "https://returnyoutubedislikeapi.com/votes?videoId=*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}